{
  "scraper": {
    "base_url": "https://www.flipkart.com/search",
    "delay": 2,
    "max_retries": 3,
    "timeout": 10
  },
  "selectors": {
    "product_container": "div.tUxRFH",
    "product_name": "div.KzDlHZ",
